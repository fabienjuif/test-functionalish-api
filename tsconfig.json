{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["es2020"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "paths": {
    "@tt/lib-cache": ["libs/cache/src/index.ts"],
    "@tt/lib-controllers": ["libs/controllers/src/index.ts"],
    "@tt/lib-services": ["libs/services/src/index.ts"],
    "@tt/lib-logger": ["libs/logger/src/index.ts"],
    "@tt/lib-postgres": ["libs/postgres/src/index.ts"]
  }
}
